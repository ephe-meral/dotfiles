# volume
bindcode 176 exec mixer vol +5 && pkill -RTMIN+1 i3blocks
bindcode 174 exec mixer vol -5 && pkill -RTMIN+1 i3blocks
# granular volume control
bindcode $mod+176 exec mixer vol +1 && pkill -RTMIN+1 i3blocks
bindcode $mod+174 exec mixer vol -1 && pkill -RTMIN+1 i3blocks
